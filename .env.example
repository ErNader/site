# کلید API برای OpenRouter - از سایت https://openrouter.ai/keys دریافت کنید
OPENROUTER_API_KEY=your_openrouter_api_key_here

# کلید رمزنگاری برای جلسه‌های فلسک (یک رشته تصادفی طولانی)
FLASK_SECRET_KEY=your_random_secret_key_here

# تنظیمات اختیاری برای احراز هویت با Google و GitHub
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# آدرس پایه سایت (معمولاً به این صورت خواهد بود)
ROOT_URL=http://localhost:5000

# Database settings (SQLite by default)
SQLALCHEMY_DATABASE_URI=sqlite:///chat.db 